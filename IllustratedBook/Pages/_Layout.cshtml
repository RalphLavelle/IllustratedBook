<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>The Illustrated Book</title>
        <base href="~/" />
        <link rel="stylesheet" href="~/css/styles.css" />
        <link rel="icon" href="~/favicon.png" />
        @if (ViewContext.RouteData.Values["page"]?.ToString() == "/Pages/Index")
        {
            <link rel="stylesheet" href="~/css/index.css" />
        }
    </head>
    <body>
        <header>
            <nav>
                <a href="/">Home</a>
            </nav>
        </header>

        <main>
            @RenderBody()
        </main>

        <footer>
            <p>&copy; @DateTime.Now.Year - The Illustrated Book</p>
        </footer>

        <script src="_framework/blazor.server.js"></script>
        <script src="~/js/imageLoader.js"></script>
    </body>
</html>